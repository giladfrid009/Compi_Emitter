int add(int a, int c) {
    return a + c;
}

int multiply(int a, int c) {
    return a * c;
}

bool iseven(int x) {
    return (x / 2) * 2 == x;
}

void main() {
    int x = 5;
    int y = 10;
    int z = 15;
    int result = x if (iseven(x)) else multiply(y, z);
    printi(result);

    int a = 20;
    int b1 = 25;
    int c = 30;
    result = a if (a > b1 and a > c) else b1 if (b1 > c) else c;
    print("The largest number is: ");
    printi(result);

    int d = 40;
    int e = 45;
    result = d if (d > e) else e if (d < e) else add(d, e);
    print("The result is: ");
    printi(result);
}